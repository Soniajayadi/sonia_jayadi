<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Rimba Pronto"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="29sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/btn_buka_ras_burung"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/murai_batu" />

        <ImageButton
            android:id="@+id/btn_buka_ras_singa"
            android:layout_width="0dp"
            android:layout_height="149dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/singa_katanga" />

        <ImageButton
            android:id="@+id/btn_buka_ras_monyet"
            android:layout_width="0dp"
            android:layout_height="149dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/monyet_mona_monkey" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="(Tekan gambar untuk membuka galeri)"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/Profile"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:onClick="MyProfile"
        android:scaleType="fitCenter"
        android:src="@drawable/profile" />
    <TextView
        android:layout_width="match_parent"
        android:text="Profile"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"/>


</LinearLayout>